<% include templates/header.ejs %>
<body>

<div class="container">
    <% include templates/body.ejs %>
    <div class="row content">
        <div class="col-sm-3 sidenav">
            <h4><%= name %> page</h4>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="./profile">Edit profile</a></li>
                <li><a href="./block">1.Πολυκατοικία</a></li>
                <li><a href="#section2">2.Διαμερίσματα</a></li>
                <li><a href="#section3">3.Έξοδα Μήνα</a></li>
                <li><a href="#section3">4.Εκτύπωση</a></li>
            </ul><br>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search Blog..">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
            </div>
        </div>

        <div class="col-sm-9">
            <h4>Στοιχεία Πολυκατοικίας</h4>
            <form method="post" action="/users/block">
                <div class="form-group">
                    <label for="name">Διεύθυνση:</label>
                    <input type="text" class="form-control" name="address" value="<%= address %>">
                </div>
                <div class="form-group">
                    <label for="name">Περιοχή:</label>
                    <input type="text" class="form-control" name="location" value="<%= location %>">
                </div>
                <div class="form-group">
                    <label for="name">Τ.Κ:</label>
                    <input type="text" class="form-control" name="postal" value="<%= postal %>">
                </div>
                <div class="form-group">
                    <label for="name">Όνομα Διαχειριστή:</label>
                    <input type="text" class="form-control" name="nameRes" value="<%= nameRes %>">
                </div>
                <div class="form-group">
                    <label for="name">Τηλέφωνο:</label>
                    <input type="text" class="form-control" name="phone" value="<%= phone %>">
                </div>
                <div class="form-group">
                    <label for="name">Κινητό:</label>
                    <input type="text" class="form-control" name="mobile" value="<%= mobile %>">
                </div>
                <div class="form-group">
                    <label for="sel1">Είδος Θέρμανσης:</label>
                    <select class="form-control" name="heatType">
                        <option>Κεντρική θέρμανση</option>
                        <option>Αυτόνομη Θέρμανση με ωρομέτρηση και χιλιοστά θέρμανσης</option>
                        <option>Αυτόνομη Θέρμανση με ωρομέτρηση και θερμικές απώλειες</option>
                        <option>Αυτόνομη Θέρμανση με θερμιδομέτρηση και θερμικές απώλειες</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Καταχώρηση</button>
            </form>
        </div>
    </div>
</div>

<% include templates/footer.ejs %>
</body>

</html>